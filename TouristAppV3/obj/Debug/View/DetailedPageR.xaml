<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TouristAppV3.View"
    xmlns:common="using:TouristAppV3.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:TouristAppV3.ViewModel"
    x:Name="pageRoot"
    x:Class="TouristAppV3.View.DetailedPageR"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Backgrounds/desaturated.jpg"/>
        </Grid.Background>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.DataContext>
            <ViewModel:ListRestaurantsViewModel/>
        </Grid.DataContext>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
				Style="{StaticResource NavigationBackButtonNormalStyle}"
				VerticalAlignment="Top"
				AutomationProperties.Name="Back"
				AutomationProperties.AutomationId="BackButton"
				AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
				IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="46,370,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Name:" FontSize="40" Height="43" Width="125"/>
        <TextBlock HorizontalAlignment="Left" Margin="221,370,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Text="{Binding ActualRestaurant.Name}" FontSize="40" Height="43"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,413,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Address:" FontSize="40" Height="43" Width="170"/>
        <TextBlock HorizontalAlignment="Left" Margin="221,413,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Text="{Binding ActualRestaurant.Address}" FontSize="40" Height="43"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,456,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Cuisine:" FontSize="40" Height="43" Width="170"/>
        <TextBlock HorizontalAlignment="Left" Margin="221,456,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Text="{Binding ActualRestaurant.Cuisine}" FontSize="40" Height="43"/>
        <TextBlock HorizontalAlignment="Left" Margin="325,499,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="505" Text="{Binding ActualRestaurant.OpeningHours}" FontSize="40" Height="43"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,542,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Telephone number:" FontSize="40" Height="43" Width="354"/>
        <TextBlock HorizontalAlignment="Left" Margin="405,542,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="425" Text="{Binding ActualRestaurant.TelephoneNumber}" FontSize="40" Height="43"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,499,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Opening hours:" FontSize="40" Height="46" Width="274"/>
        <Image HorizontalAlignment="Left" Height="464" Margin="766,35,0,0" VerticalAlignment="Top" Width="559" Source="ms-appx:///Assets/Backgrounds/FrameMyTV1083.jpg" Grid.Row="1"/>
        <Image HorizontalAlignment="Left" Height="293" Margin="852,120,0,0" Grid.Row="1" VerticalAlignment="Top" Width="378" Source="{Binding ActualRestaurant.ImageUrl, Mode=TwoWay}"/>
    </Grid>
</Page>

