<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TouristAppV3.View"
    xmlns:common="using:TouristAppV3.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:WinRTXamlToolkit.Controls"
    xmlns:Controls1="using:Callisto.Controls"
    xmlns:ViewModel="using:TouristAppV3.ViewModel"
    xmlns:Maps="using:Bing.Maps"
    x:Name="pageRoot"
    x:Class="TouristAppV3.View.DetailedPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Backgrounds/desaturated.jpg"/>
        </Grid.Background>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.DataContext>
            <ViewModel:ListHotelViewModel/>
        </Grid.DataContext>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
				Style="{StaticResource NavigationBackButtonNormalStyle}"
				VerticalAlignment="Top"
				AutomationProperties.Name="Back"
				AutomationProperties.AutomationId="BackButton"
				AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
				IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="115,198,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Address:" VerticalAlignment="Top" FontSize="20" Height="24" Width="75"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,227,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Category:" VerticalAlignment="Top" FontSize="20" Height="24" Width="85"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,256,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Telephone number:" VerticalAlignment="Top" FontSize="20" Height="24" Width="175"/>
        <TextBlock HorizontalAlignment="Left" Margin="115,169,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Text="Name:" FontSize="20" Height="24" Width="57"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,169,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Text="{Binding ActualHotel.Name}" FontSize="20" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,198,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="425" Text="{Binding ActualHotel.Address}" FontSize="20" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,227,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Text="{Binding ActualHotel.Category}" FontSize="20" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="310,256,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Text="{Binding ActualHotel.TelephoneNumber}" FontSize="20" Height="24"/>
        <Controls1:Rating x:Name="CRS"
			ItemCount="5"
			Background="Transparent"
			Foreground="Gold"
			Grid.Row="1*"/>
    </Grid>
</Page>

